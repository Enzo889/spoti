---
import Left from "@/icons/Left.astro";
import Right from "@/icons/Right.astro";
import Github from "@/icons/Github.astro";
---

<div
  class="relative z-10 py-4 px-6 flex justify-between"
  transition:name="page header"
  transition:persist
>
  <div class="flex items-center gap-1">
    <button
      id="backButton"
      onclick="window.history.back()"
      aria-label="go back to previous page"
      class="bg-zinc-900 rounded-full inline-flex justify-center items-center h-8 w-8 hover:opacity-75 transition-opacity duration-150"
    >
      <Left class="h-4 w-4 -ml-0.5" />
    </button>
    <button
      id="forwardButton"
      onclick="window.history.forward()"
      aria-label="go forward to next page"
      class="bg-zinc-900 rounded-full inline-flex justify-center items-center h-8 w-8 hover:opacity-75 transition-opacity duration-150"
    >
      <Right class="h-4 w-4 -ml-0.5" />
    </button>
  </div>
  <div class="flex items-center gap-3">
    <a
      target="_blank"
      aria-label="github repository"
      href="https://github.com/igorm84/spotify-astro-transitions"
      class="text-gray-200 hover:text-white"
    >
      <Github class="h-7 w-7" />
    </a>
  </div>
</div>
